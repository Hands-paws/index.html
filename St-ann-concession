<body>
    <div id="login-page">
        <h1>Welcome to St. Ann Concessions</h1>
        <form id="login-form" onsubmit="return checkPassword()">
            <label for="password">Enter Password:</label>
            <br>
            <input type="password" id="password" placeholder="Password" required>
            <br>
            <button type="submit">Submit</button>
        </form>
        <p class="error hidden" id="error-message">Incorrect password. Please try again.</p>
    </div>

    <div id="home" class="hidden">
        <h1>St. Ann Concessions</h1>
        <h2>Select a Time Slot</h2>
        <div id="time-slots">
            <!-- Time slots will be dynamically inserted here -->
        </div>
    </div>

    <div id="product-page" class="hidden">
        <h2 id="selected-time-slot">Time Slot: </h2>
        <div class="product-container" id="product-container">
            <!-- Products will be dynamically inserted here -->
        </div>
        <button class="undo-btn" onclick="undoLastAction()">Undo Last Sale</button>
        <button onclick="goBack()">Back to Time Slots</button>
    </div>

    <script>
        const timeSlots = {
            Friday: ["6:00", "7:10", "8:20"],
            Saturday: ["8:00", "9:10", "10:20", "11:30", "12:40", "1:50", "3:00", "4:10", "5:20", "6:30", "7:40", "8:50"]
        };

        const products = [
            { name: "Skittles", price: 2 },
            { name: "Starburst", price: 2 },
            { name: "Hershey's", price: 2 },
            { name: "Reese's", price: 2 },
            { name: "Kit Kat", price: 2 },
            { name: "Chips", price: 1 },
            { name: "Sprite", price: 2 },
            { name: "Coke", price: 2 },
            { name: "Cherry Coke", price: 2 },
            { name: "Fanta", price: 2 },
            { name: "Water", price: 2 },
            { name: "Takis", price: 1 }
        ];
        
        const salesData = {};
        const lastAction = {};

        const timeSlotContainer = document.getElementById("time-slots");
        const productContainer = document.getElementById("product-container");
        const homePage = document.getElementById("home");
        const productPage = document.getElementById("product-page");
        const loginPage = document.getElementById("login-page");
        const errorMessage = document.getElementById("error-message");
        const selectedTimeSlotTitle = document.getElementById("selected-time-slot");

        function createTimeSlotButtons() {
            for (const day in timeSlots) {
                timeSlots[day].forEach(slot => {
                    const button = document.createElement("button");
                    button.className = "time-slot";
                    button.textContent = `${day} ${slot}`;
                    button.onclick = () => openTimeSlot(day, slot);
                    timeSlotContainer.appendChild(button);
                });
            }
        }

        function openTimeSlot(day, slot) {
            const timeSlot = `${day} ${slot}`;
            selectedTimeSlotTitle.textContent = `Time Slot: ${timeSlot}`;
            homePage.classList.add("hidden");
            productPage.classList.remove("hidden");

            productContainer.innerHTML = "";
            if (!salesData[timeSlot]) salesData[timeSlot] = {};
            if (!lastAction[timeSlot]) lastAction[timeSlot] = [];

            products.forEach(product => {
                const productDiv = document.createElement("div");
                productDiv.className = "product";

                const button = document.createElement("button");
                button.className = "product-btn";
                button.textContent = `${product.name} - $${product.price}`;
                button.onclick = () => increaseCount(timeSlot, product.name);

                const counter = document.createElement("span");
                counter.className = "counter";
                counter.id = `${timeSlot}-${product.name}`;
                counter.textContent = `Sold: ${salesData[timeSlot][product.name] || 0}`;

                productDiv.appendChild(button);
                productDiv.appendChild(counter);
                productContainer.appendChild(productDiv);
            });
        }

        function increaseCount(timeSlot, product) {
            if (!salesData[timeSlot][product]) salesData[timeSlot][product] = 0;
            salesData[timeSlot][product]++;
            document.getElementById(`${timeSlot}-${product}`).textContent = `Sold: ${salesData[timeSlot][product]}`;
            lastAction[timeSlot].push({ product, action: "add" });
        }

        function undoLastAction() {
            const timeSlot = selectedTimeSlotTitle.textContent.replace("Time Slot: ", "").trim();
            const lastActionForSlot = lastAction[timeSlot];

            if (lastActionForSlot && lastActionForSlot.length > 0) {
                const lastActionItem = lastActionForSlot.pop();
                const { product } = lastActionItem;

                if (salesData[timeSlot][product] && salesData[timeSlot][product] > 0) {
                    salesData[timeSlot][product]--;
                    document.getElementById(`${timeSlot}-${product}`).textContent = `Sold: ${salesData[timeSlot][product]}`;
                }
            } else {
                alert("No actions to undo!");
            }
        }

        function checkPassword() {
            const password = document.getElementById("password").value;
            if (password === "sodaandsnacks") {
                loginPage.classList.add("hidden");
                homePage.classList.remove("hidden");
                return false; // Prevents form submission
            } else {
                errorMessage.classList.remove("hidden");
                return false; // Prevents form submission
            }
        }

        function goBack() {
            homePage.classList.remove("hidden");
            productPage.classList.add("hidden");
        }

        createTimeSlotButtons();
    </script>
</body>
</html>





